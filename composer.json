{
    "name": "ixocreate/framework",
    "description": "IXOCREATE Framework",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "require": {
        "php": "^7.1",
        "ixocreate/admin-package": "^0.2",
        "ixocreate/asset-package": "^0.1",
        "ixocreate/cms-package": "^0.2",
        "ixocreate/mail-package": "^0.1",
        "ixocreate/media-package": "^0.2",
        "ixocreate/registry-package": "^0.2",
        "ixocreate/translation-package": "^0.2"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Framework\\": "tests/misc/",
            "Ixocreate\\Test\\Framework\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
