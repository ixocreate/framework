{
    "name": "ixocreate/framework",
    "description": "IXOCREATE Framework",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "filp/whoops": "^2.10",
        "ixocreate/admin-package": "^0.4.0",
        "ixocreate/application": "^0.3.0",
        "ixocreate/cms-package": "^0.4.0",
        "ixocreate/mail-package": "^0.2.0",
        "ixocreate/media-package": "^0.5.0",
        "ixocreate/registry-package": "^0.4.0",
        "ixocreate/translation-package": "^0.4.0"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "^0.2"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Framework\\": "tests/misc/",
            "Ixocreate\\Test\\Framework\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
