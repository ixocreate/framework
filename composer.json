{
    "name": "ixocreate/framework",
    "description": "IXOCREATE framework composition",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ixocreate/application-console": "=1.0.0-alpha2",
        "ixocreate/application-http": "=1.0.0-alpha2",
        "ixocreate/asset": "=1.0.0-alpha2",
        "ixocreate/cache-package": "=1.0.0-alpha1",
        "ixocreate/cms": "=1.0.0-alpha2",
        "ixocreate/command-bus": "=1.0.0-alpha2",
        "ixocreate/command-bus-filter": "=1.0.0-alpha2",
        "ixocreate/command-bus-validation": "=1.0.0-alpha2",
        "ixocreate/common-types": "=1.0.0-alpha2",
        "ixocreate/config": "=1.0.0-alpha2",
        "ixocreate/database": "=1.0.0-alpha2",
        "ixocreate/entity": "=1.0.0-alpha2",
        "ixocreate/event": "=1.0.0-alpha2",
        "ixocreate/filesystem": "=1.0.0-alpha2",
        "ixocreate/filter": "=1.0.0-alpha2",
        "ixocreate/intl": "=1.0.0-alpha2",
        "ixocreate/media": "=1.0.0-alpha2",
        "ixocreate/project-uri": "=1.0.0-alpha2",
        "ixocreate/resource": "=1.0.0-alpha2",
        "ixocreate/schema": "=1.0.0-alpha2",
        "ixocreate/template": "=1.0.0-alpha2",
        "ixocreate/translation": "=1.0.0-alpha2",
        "ixocreate/validation": "=1.0.0-alpha2",
        "ixocreate/servicemanager": "=1.0.0-alpha2"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^1.0",
        "php-coveralls/php-coveralls": "^2.0",
        "phpunit/phpunit": "^6.0.6"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IxocreateMisc\\Framework\\": "tests/misc/",
            "IxocreateTest\\Framework\\": "tests/src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
